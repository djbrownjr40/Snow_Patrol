<% elsif user_signed_in? %>
  <%= simple_form_for([@ski_resort, @check_in], remote: true) do |f|  %>
    <%= f.submit 'Check in', class: "bby-blue-btn btn btn-secondary btn-block w-100 p-3" %>
  <% end %>
