<div class="map-container">
  <%# <iframe src="https://www.google.com/maps/d/u/0/embed?mid=16VPRMZK-XiRKcZk4yzphgNcfpTQ" width="100%" height="290"></iframe> %>
</div>
<div class="ski-resort-info bg-primary px-4 py-3 ">
  <p class="snow-report p-1 bg-success text-center">Right now we have pow snow!! </p>
  <h1 class="text-center m-4 text-light"><strong> <%= @ski_resort.name %></strong></h1>
  <%= link_to "Check out", check_in_path(new_checkin), data: {turbo_method: :patch}, class:"bby-blue-btn btn btn-secondary btn-block w-100 p-3"%>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Leave your review üìù
  </button>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#snowBackdrop">
    Leave your Snow report ‚ùÑÔ∏è
  </button>
  <%# plus the reviews btn %>
  <div class="reviews-display">
    <div class="each bg-light">
      <p >Your Snow report:</p>
      <% if !current_user.check_ins.last.snow_reports.nil? && !current_user.check_ins.last.snow_reports.empty? %>
        <%= current_user.check_ins.last.snow_reports.last.rating %>
      <% end %>
    </div>
    <div class="each bg-light">
      <p>Lift Waiting Times:</p>
    </div>
    <div class="each bg-light">
      <p>Crowded?</p>
    </div>
    <div class="each bg-light">
      <p>Location:</p>
    </div>
    <div class="each bg-light">
      <p>Food quality:</p>
    </div>
    <div class="each bg-light">
      <p>Overall price:</p>
    </div>
  </div>
</div>
<%= render 'review_modal', review: @review, check_in: current_user.active_check_in %>
<%= render 'snow_report_modal', ski_resort: current_user.active_check_in.ski_resort, snow_report: @snow_report %>
